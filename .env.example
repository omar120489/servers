# ============================================================================
# Traffic CRM - Environment Configuration Blueprint
# ============================================================================
# This file serves as the definitive contract between the application and its
# runtime environment. Copy this file to .env and fill in actual values.
#
# Security: This file contains NO secrets and is safe to commit.
# Ref: Twelve-Factor App (https://12factor.net/config)
# ============================================================================

# ----------------------------------------------------------------------------
# Section 1: Frontend (Vite Dev Server)
# ----------------------------------------------------------------------------
# The port on which the Vite development server will listen.
# Type: number (integer, 1024-65535)
# Default: 3002
PORT=3002

# The base path for the application (e.g., /crm for hosting at example.com/crm)
# Type: string (empty for root path)
# Default: "" (empty = root)
VITE_APP_BASE_NAME=

# The URL of the backend API server.
# Type: string (valid URL)
# Required: Yes
# Client-side exposed: Yes (embedded in browser bundle)
VITE_APP_API_URL=http://localhost:8787

# The URL of the reporting microservice API.
# Type: string (valid URL)
# Required: Yes
# Client-side exposed: Yes (embedded in browser bundle)
VITE_APP_REPORTING_API_URL=http://localhost:8006

# ----------------------------------------------------------------------------
# Section 2: Backend Services (Server-side only)
# ----------------------------------------------------------------------------
# The port on which the Express mock backend will listen.
# Type: number (integer, 1024-65535)
# Default: 8787
DEV_BACKEND_PORT=8787

# The port for the NestJS reporting microservice.
# Type: number (integer, 1024-65535)
# Default: 8006
REPORTING_SERVICE_PORT=8006

# ----------------------------------------------------------------------------
# Section 3: Testing & Automation
# ----------------------------------------------------------------------------
# The base URL for Playwright E2E tests to target.
# Type: string (valid URL)
# Default: http://localhost:3002
PLAYWRIGHT_BASE_URL=http://localhost:3002

# ----------------------------------------------------------------------------
# Section 4: Authentication Providers (Optional)
# All authentication variables are optional. Configure only the providers
# you intend to use. These are client-side exposed (VITE_ prefix).
# ----------------------------------------------------------------------------

# Firebase Authentication
# VITE_APP_FIREBASE_API_KEY=
# VITE_APP_FIREBASE_AUTH_DOMAIN=
# VITE_APP_FIREBASE_PROJECT_ID=

# Auth0 Authentication
# VITE_APP_AUTH0_DOMAIN=
# VITE_APP_AUTH0_CLIENT_ID=

# AWS Cognito Authentication
# VITE_APP_AWS_COGNITO_USER_POOL_ID=
# VITE_APP_AWS_COGNITO_CLIENT_ID=

# Supabase Authentication
# VITE_APP_SUPABASE_URL=
# VITE_APP_SUPABASE_ANON_KEY=

# ----------------------------------------------------------------------------
# Section 5: Feature Flags (Optional)
# ----------------------------------------------------------------------------
# Enable analytics dashboard features
# Type: boolean ("true" or "false")
# Default: true
# VITE_APP_ENABLE_ANALYTICS=true

# Enable WebSocket real-time updates
# Type: boolean ("true" or "false")
# Default: false
# VITE_APP_ENABLE_WEBSOCKETS=false

# ----------------------------------------------------------------------------
# Section 6: Development & Debugging (Optional)
# ----------------------------------------------------------------------------
# Logging level for the application
# Type: string ("debug", "info", "warn", "error")
# Default: "info"
# LOG_LEVEL=info

# Enable debug mode (verbose logging, source maps)
# Type: boolean ("true" or "false")
# Default: false
# DEBUG=false

# ============================================================================
# End of Configuration Template
